{
  "name": "buzztrip",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "sherif": "bunx sherif@latest -p ./apps/mobile",
    "lint": "turbo lint && bun sherif",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,mdx}\"",
    "clean:all": "turbo run clean:all",
    "update": "bun update --latest && cd ./packages/db && bun update --latest && cd ../tsconfig && bun update --latest && cd ../../apps/api && cd ../web && bun update --latest && cd ../.."
  },
  "devDependencies": {
    "@buzztrip/tsconfig": "workspace:*",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "drizzle-orm": "^0.43.1",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.2.13",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "browser-tabs-lock",
    "core-js",
    "esbuild",
    "keccak",
    "react-native-elements",
    "sharp",
    "workerd"
  ],
  "resolutions": {
    "drizzle-orm": "^0.43.1",
    "better-auth": "^1.2.8",
    "@polar-sh/better-auth": "^1.0.1",
    "@polar-sh/sdk": "^0.33.0",
    "convex": "^1.24.8"
  }
}
