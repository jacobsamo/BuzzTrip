{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "src",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "paths": {
      "@/*": ["./src/*"],
      "better-auth": ["../../node_modules/better-auth"]
    },
    "jsx": "react-jsx",
  },
  "include": ["src/**/*", "./worker-configuration.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "dist"]
}
