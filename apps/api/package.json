    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^0.18.3",
    "@hono/zod-validator": "^0.4.2",
    "hono": "^4.6.16",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "@types/bun": "^1.1.16",
    "wrangler": "^3.101.0"
